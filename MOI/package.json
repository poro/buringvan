{
  "name": "ai-social-media-management",
  "version": "1.0.0",
  "description": "AI-Powered Social Media Management System",
  "main": "index.js",
  "workspaces": [
    "client/mobile",
    "client/web",
    "server/api-gateway",
    "server/auth-service",
    "server/content-service",
    "server/ai-service",
    "server/social-service",
    "server/analytics-service",
    "server/notification-service",
    "tests"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:content\" \"npm run dev:ai\" \"npm run dev:social\" \"npm run dev:analytics\" \"npm run dev:notifications\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:web\"",
    "dev:gateway": "cd server/api-gateway && npm run dev",
    "dev:auth": "cd server/auth-service && npm run dev",
    "dev:content": "cd server/content-service && npm run dev",
    "dev:ai": "cd server/ai-service && npm run dev",
    "dev:social": "cd server/social-service && npm run dev",
    "dev:analytics": "cd server/analytics-service && npm run dev",
    "dev:notifications": "cd server/notification-service && npm run dev",
    "dev:web": "cd client/web && npm start",
    "dev:mobile": "cd client/mobile && npm start",
    "install:all": "npm install && npm run install:server && npm run install:client",
    "install:server": "cd server/api-gateway && npm install && cd ../auth-service && npm install && cd ../content-service && npm install && cd ../ai-service && npm install && cd ../social-service && npm install && cd ../analytics-service && npm install && cd ../notification-service && npm install",
    "install:client": "cd client/web && npm install && cd ../mobile && npm install",
    "install:mobile": "cd client/mobile && npm install",
    "ios": "cd client/mobile && npm run ios",
    "android": "cd client/mobile && npm run android",
    "mobile:clean": "cd client/mobile && npm run clean",
    "mobile:pods": "cd client/mobile/ios && pod install",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client/web && npm run build",
    "build:mobile": "cd client/mobile && npm run build",
    "build:server": "echo 'Building server services...'",
    "test": "npm run test:all",
    "test:all": "npm test --workspaces",
    "test:mobile": "npm --workspace=client/mobile test",
    "test:web": "npm --workspace=client/web test",
    "test:ai": "npm --workspace=server/ai-service test",
    "test:auth": "npm --workspace=server/auth-service test",
    "test:content": "npm --workspace=server/content-service test",
    "test:integration": "npm --workspace=tests/integration test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:destroy": "kubectl delete -f infrastructure/kubernetes/",
    "deploy": "./scripts/deploy-to-cloud.sh",
    "deploy:quick": "./scripts/quick-deploy.sh",
    "staging:start": "./scripts/start-staging-simple.sh",
    "staging:test": "./scripts/test-staging.sh",
    "staging:test-flows": "./scripts/test-user-flows.sh",
    "staging:monitor": "./scripts/monitor-staging.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-chartjs-2": "^5.3.0"
  }
}
