# Staging Environment Variables
NODE_ENV=staging

# Database (Local staging - using localhost since services run outside Docker)
MONGODB_URI=mongodb://staginguser:stagingpassword@localhost:27017/moi_staging?authSource=admin
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=staging-super-secret-jwt-key-different-from-prod
JWT_REFRESH_SECRET=staging-super-secret-refresh-key-different-from-prod

# API Ports (for staging deployment)
PORT=3000
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
CONTENT_SERVICE_PORT=3002
AI_SERVICE_PORT=3003
SOCIAL_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006

# Service URLs (Local staging)
AUTH_SERVICE_URL=http://auth-service:3001
CONTENT_SERVICE_URL=http://content-service:3002
AI_SERVICE_URL=http://ai-service:3003
SOCIAL_SERVICE_URL=http://social-service:3004
ANALYTICS_SERVICE_URL=http://analytics-service:3005
NOTIFICATION_SERVICE_URL=http://notification-service:3006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (Local staging)
CORS_ORIGIN=http://localhost:3000

# OpenAI (use same key for staging)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Social Media APIs (staging apps - need to create these)
LINKEDIN_CLIENT_ID=staging-linkedin-client-id
LINKEDIN_CLIENT_SECRET=staging-linkedin-client-secret
TWITTER_CLIENT_ID=staging-twitter-client-id
TWITTER_CLIENT_SECRET=staging-twitter-client-secret
INSTAGRAM_CLIENT_ID=staging-instagram-client-id
INSTAGRAM_CLIENT_SECRET=staging-instagram-client-secret

# Notification Services
SENDGRID_API_KEY=staging-sendgrid-key
TWILIO_ACCOUNT_SID=staging-twilio-sid
TWILIO_AUTH_TOKEN=staging-twilio-token
FIREBASE_PROJECT_ID=staging-firebase-project

# Security
BCRYPT_ROUNDS=10

# Google OAuth (staging app)
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=staging-google-client-secret
GOOGLE_CALLBACK_URL=https://auth-staging.yourdomain.com/api/auth/google/callback

# Frontend URL
CLIENT_URL=http://localhost:3000

# Session
SESSION_SECRET=staging-super-secret-session-key

# Staging specific
ENVIRONMENT_NAME=staging
LOG_LEVEL=debug
ENABLE_DEBUG_ROUTES=true